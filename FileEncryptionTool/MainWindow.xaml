<Window x:Class="FileEncryptionTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileEncryptionTool"
        mc:Ignorable="d"
        Title="File Encryption" Height="450" Width="800"
        Background="#1B3C53"
        MinHeight="500"
        MinWidth="700"
>
    <Window.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#D2C1B6"/>
            <Setter Property="Background" Value="#456882"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style TargetType="Rectangle">
            <Setter Property="Stroke" Value="#D2C1B6"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="StrokeDashArray" Value="2 4"/>
            <Setter Property="RadiusX" Value="10"/>
            <Setter Property="RadiusY" Value="10"/>
            <Setter Property="Fill" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Fill" Value="#2A4A5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#456882"/>
            <Setter Property="Foreground" Value="#D2C1B6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#234C6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,-6" RenderTransformOrigin="0.499,0.426">
        <Label 
            Foreground="#D2C1B6" 
            Content="File Encryption" 
            Margin="0,10,0,0" 
            Height="46" 
            Width="247" 
            AutomationProperties.IsColumnHeader="True"
            FontSize="24"
            HorizontalContentAlignment="Center"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontFamily="Proxy 1"
            FontWeight="UltraBold"
        />
        <Rectangle 
            x:Name="DropZone"
            Height="200"
            Width="650" 
            Margin="0,81,0,0" 
            UseLayoutRounding="False"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            
            
            Drop="DragDrop"
            AllowDrop="True"
        />
        <TextBlock 
            x:Name="InfoText"
            HorizontalAlignment="Center"
            Width="auto"
            Height="auto"
            TextWrapping="Wrap"
            Text="Drag And Drop Files Here"
            VerticalAlignment="Top"
            FontSize="17"
            Foreground="Gray"
            IsHitTestVisible="False" 
            Margin="0,170,0,0"
        />
        <StackPanel Margin="0,285,0,75" VerticalAlignment="Center" HorizontalAlignment="Center" Width="auto" Height="40" Orientation="Horizontal">
            <RadioButton 
            x:Name="RadioEncryption"
            Content="Encryption" 
            HorizontalAlignment="Left" 
            Margin="0,0,20,0"
            VerticalAlignment="Center" 
            Width="auto" 
            Checked="RadioButton_Checked"
        />
            <RadioButton 
            x:Name="RadioDecryption"
            Content="Decryption" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Width="auto" 
            Checked="RadioButton_Checked"
        />

        </StackPanel>
        <Button
            x:Name="BeginTask"
            Content="Start"
            Height="40"
            Width="100"
            HorizontalAlignment="Center"
            Margin="0,0,0,30"
            VerticalAlignment="Bottom"
            FontSize="20"
            Click="StartButton"
        />
        <Grid/>
    </Grid>
</Window>
